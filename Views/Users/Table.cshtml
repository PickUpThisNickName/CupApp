<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">UserName</th>
                <th scope="col">StartDate</th>
                <th scope="col">HoursWorked</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (var User in Model)
                {
                    i++;
                    <tr>
                        <td><input type="text" class="form-control" id="ID_@i.ToString()" placeholder="" value="@User.Id.ToString()" required=""></td>
                        <td><input type="text" class="form-control" id="UserName_@i.ToString()" placeholder="" value="@User.UserName" required=""></td>
                        <td><input type="text" class="form-control" id="StartDate_@i.ToString()" placeholder="" value="@User.StartDate" required=""></td>
                        <td><input type="text" class="form-control" id="HoursWorked_@i.ToString()" placeholder="" value="@User.HoursWorked.ToString()" required=""></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>