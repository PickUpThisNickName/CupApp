<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">OpenDate</th>
                <th scope="col">OpenTime</th>
                <th scope="col">CloseDate</th>
                <th scope="col">CloseTime</th>
                <th scope="col">WorkerID</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (var WorkerSession in Model)
                {
                    i++;
                    <tr>
                        <td><input type="text" class="form-control" id="ID_@i.ToString()" placeholder="" value="@WorkerSession.Id.ToString()" required=""></td>
                        <td><input type="text" class="form-control" id="OpenDate_@i.ToString()" placeholder="" value="@WorkerSession.OpenDate" required=""></td>
                        <td><input type="text" class="form-control" id="OpenTime_@i.ToString()" placeholder="" value="@WorkerSession.OpenTime" required=""></td>
                        <td><input type="text" class="form-control" id="CloseDate_@i.ToString()" placeholder="" value="@WorkerSession.CloseDate" required=""></td>
                        <td><input type="text" class="form-control" id="CloseTime_@i.ToString()" placeholder="" value="@WorkerSession.CloseTime" required=""></td>
                        <td><input type="text" class="form-control" id="WorkerID_@i.ToString()" placeholder="" value="@WorkerSession.WorkerID.ToString()" required=""></td>
                        <td><input type="text" class="form-control" id="Name_@i.ToString()" placeholder="" value="@WorkerSession.Name" required=""></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>