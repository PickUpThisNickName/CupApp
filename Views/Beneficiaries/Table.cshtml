<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Group</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (var Benef in Model)
                {
                    i++;
                    <tr>
                        <td><input type="text" class="form-control" id="ID_@i.ToString()" placeholder="" value="@Benef.Id.ToString()" required=""></td>
                        <td><input type="text" class="form-control" id="Group_@i.ToString()" placeholder="" value="@Benef.Group" required=""></td>
                        <td><input type="text" class="form-control" id="Name_@i.ToString()" placeholder="" value="@Benef.Name" required=""></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>