<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Cup</th>
                <th scope="col">Source1</th>
                <th scope="col">Source2</th>
                <th scope="col">Source3</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (var Drink in Model)
                {
                    i++;
                    <tr>
                        <td><input type="text" class="form-control" id="ID_@i.ToString()" placeholder="" value="@Drink.Id.ToString()" required=""></td>
                        <td><input type="text" class="form-control" id="Name_@i.ToString()" placeholder="" value="@Drink.Name" required=""></td>
                        <td><input type="text" class="form-control" id="Price_@i.ToString()" placeholder="" value="@Drink.Price.ToString()" required=""></td>
                        <td><input type="text" class="form-control" id="Cup_@i.ToString()" placeholder="" value="@Drink.Cup" required=""></td>
                        <td><input type="text" class="form-control" id="Source1_@i.ToString()" placeholder="" value="@Drink.Source1" required=""></td>
                        <td><input type="text" class="form-control" id="Source2_@i.ToString()" placeholder="" value="@Drink.Source2" required=""></td>
                        <td><input type="text" class="form-control" id="Source3_@i.ToString()" placeholder="" value="@Drink.Source3" required=""></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>